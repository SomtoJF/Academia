{
	"compilerOptions": {
		"rootDirs": ["microservices/core-service/src"],
		"outDir": "dist",
		"lib": ["es2020"],
		"target": "es2020",
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"types": ["node"]
	},
	"include": [
		"microservices/core-service/src/**/*.tsx",
		"microservices/core-service/src/**/*.ts"
	],
	"exclude": ["node_modules", "test/**/*.ts"]
}
